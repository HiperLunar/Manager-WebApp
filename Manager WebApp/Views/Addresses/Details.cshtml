@model Manager_WebApp.Models.Address

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Address</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Information)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Information)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsCommercial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsCommercial)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users)
        </dt>
        <dd class="col-sm-10">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(model => model.Users.FirstOrDefault().User.Name)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Users.FirstOrDefault().User.Age)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Users.FirstOrDefault().User.Email)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Users.FirstOrDefault().User.Description)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Users)
                    {
                    <tr>
                        <td>@Html.DisplayFor(model => item.User.Name)</td>
                        <td>@Html.DisplayFor(model => item.User.Age)</td>
                        <td>@Html.DisplayFor(model => item.User.Email)</td>
                        <td>@Html.DisplayFor(model => item.User.Description)</td>
                    </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
